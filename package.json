{
  "name": "PurchaseOrder",
  "version": "1.0.0",
  "description": "My SAP project",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap-cloud-sdk/http-client": "^3.25.0",
    "@sap-cloud-sdk/util": "^3.25.0",
    "@sap/cds": "^8",
    "@sap/low-code-event-handler": "^1.2.5",
    "@sap/xsenv": ">=3.3.2 <3.3.3",
    "@sap/xssec": "^4.2.7",
    "express": "^4",
    "hdb": "^0.19.11",
    "passport": "^0.7.0",
    "@sap/mdk-tools": "^1.3.1"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.7.0",
    "@cap-js/sqlite": "^1",
    "@sap/dev-cap-tools": "^1.31.0"
  },
  "scripts": {
    "start": "cds-serve",
    "start-local": "npm run generate-entry-point && npm run cds-watch",
    "generate-entry-point": "dev-cap-tools gen-entrypoint",
    "cds-watch": "cds watch --open",
    "watch-purchaseorder.purchaseorder": "cds watch --open purchaseorder.purchaseorder/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "sql": {
      "native_hana_associations": false
    },
    "requires": {
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "app-service": {
        "impl": "@sap/low-code-event-handler"
      },
      "auth": {
        "[development]": {
          "kind": "dummy"
        },
        "[production]": {
          "kind": "xsuaa"
        }
      },
      "PurchaseOrder": {
        "kind": "odata-v2",
        "model": "srv/external/PurchaseOrder",
        "[production]": {
          "credentials": {
            "destination": "apihub_sandbox",
            "path": "s4hanacloud/sap/opu/odata/sap/API_PURCHASEORDER_PROCESS_SRV"
          }
        },
        "csrf": true,
        "csrfInBatch": true
      }
    }
  },
  "lcap": true,
  "sapux": [
    "app/purchaseorder.purchaseorder"
  ]
}
